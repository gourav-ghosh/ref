<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.vendor.fragment.InquiriesFilterActionFragment"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/filter_available_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_8"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/filter_available_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/dimen_8"
                android:src="@drawable/orange_checkbox_unselected"/>
            <TextView
                android:text="Available"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:textSize="@dimen/dimen_12"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/filter_not_available_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_8"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/filter_not_available_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/dimen_8"
                android:fontFamily="@font/outfit_regular"
                android:src="@drawable/orange_checkbox_unselected"/>
            <TextView
                android:text="Not Available"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_regular"
                android:textSize="@dimen/dimen_12"/>

        </LinearLayout>
    </LinearLayout>

</layout>