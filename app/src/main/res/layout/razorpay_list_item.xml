<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_12"
        android:outlineSpotShadowColor="@color/orange"
        app:cardCornerRadius="@dimen/dimen5"
        app:cardElevation="@dimen/dimen_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sea_blue"
                android:text="xyz@123sdafg"
                android:fontFamily="@font/outfit_medium"
                />

            <TextView
                android:id="@+id/item_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Paid"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="@dimen/dimen_12"
                android:fontFamily="@font/outfit_medium"
                android:paddingVertical="@dimen/dimen3"
                android:background="@drawable/green_round_bg" />
            <TextView
                android:id="@+id/nameET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Kalpana"
                android:layout_marginTop="@dimen/dimen_12"
                android:layout_below="@id/link"
                android:fontFamily="@font/outfit_medium"
                />
            <TextView
                android:id="@+id/date_timeET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Date Time"
                android:layout_marginVertical="@dimen/dimen_8"
                android:layout_below="@id/nameET"
                android:fontFamily="@font/outfit_medium"
                />
            <TextView
                android:id="@+id/item_amount_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="10,000/-"
                android:layout_below="@id/date_timeET"
                android:layout_marginBottom="@dimen/dimen5"
                android:fontFamily="@font/outfit_medium"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/item_amount_ET"
                android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/copy"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="@dimen/dimen3"
                android:src="@drawable/ic_copy" />
            <ImageView
                android:id="@+id/gray_whatsapp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="@dimen/dimen_12"
                android:padding="@dimen/dimen3"
                android:src="@drawable/ic_gray_whatsapp" />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_delete"
                android:layout_marginEnd="@dimen/dimen_8"
                android:padding="@dimen/dimen3"
                android:tint="@color/gray"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>