<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen10"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dimen6"
    app:cardCornerRadius="@dimen/dimen10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/order_dialog_crossIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cross"
            android:padding="@dimen/dimen3"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen20" />
        <TextView
            android:id="@+id/order_dialog_titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Confirm Delete"
            android:layout_marginTop="@dimen/dimen20"
            android:fontFamily="@font/outfit_medium"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/order_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_dialog_titleTV"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dimen16"
            android:layout_marginTop="@dimen/dimen16"
            android:layout_marginEnd="@dimen/dimen16"
            android:layout_marginBottom="@dimen/dimen16"
            android:fontFamily="@font/outfit_medium"
            android:text="want to delete this order  permanently?"
            android:textColor="@color/hint_text_gray" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/order_dialog_text"
            android:layout_marginBottom="@dimen/dimen16"
            android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/order_dialog_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/dimen16"
            android:paddingVertical="@dimen/dimen6"
            android:layout_marginEnd="@dimen/dimen10"
            android:background="@drawable/round_grayish_border" />
            <TextView
                android:id="@+id/order_dialog_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/dimen16"
                android:paddingVertical="@dimen/dimen6"
                android:layout_marginStart="@dimen/dimen10"
                android:background="@drawable/red_round_bg" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>