<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen10"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/receive_commentLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen10"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/receiver_profile_pic_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_marginEnd="@dimen/dimen10"
                android:background="@drawable/gray_fill_circle"
                android:padding="@dimen/dimen5"
                android:src="@drawable/ic_person_border"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/receiver_roleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="@dimen/dimen2"
                    android:textSize="@dimen/dimen14" />

                <TextView
                    android:id="@+id/receiver_textTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="160dp"
                    android:padding="@dimen/dimen2"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/receiver_timeTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="@dimen/dimen2"
                    android:textSize="@dimen/dimen_8" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sender_commentLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/receive_commentLL"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginEnd="@dimen/dimen10"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen5"
                    android:background="@drawable/orange_round_bg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sender_roleTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:maxWidth="@dimen/dimen150"
                        android:fontFamily="@font/outfit_regular"
                        android:padding="@dimen/dimen2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen14" />

                    <TextView
                        android:id="@+id/sender_textTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen2"
                        android:maxWidth="@dimen/dimen150"
                        android:fontFamily="@font/outfit_regular"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_12" />

                    <TextView
                        android:id="@+id/sender_timeTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:padding="@dimen/dimen2"
                        android:textColor="@color/white"
                        android:fontFamily="@font/outfit_regular"
                        android:textSize="@dimen/dimen_8"
                        tools:ignore="TextSizeCheck" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/sender_profile_pic_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/dimen10"
                android:layout_marginTop="@dimen/dimen10"
                android:background="@drawable/gray_fill_circle"
                android:padding="@dimen/dimen5"
                android:src="@drawable/ic_person_border"
                app:tint="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</layout>