<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:layout_margin="@dimen/dimen10"
    android:background="@color/white">

        <ImageView
            android:id="@+id/acc_verifiedLL"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/grass_green_circle_bg"
            android:padding="@dimen/dimen3"
            android:src="@drawable/ic_verified_border"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/acc_verifiedLL"
        android:fontFamily="@font/outfit_medium"
        android:text="Account Verified"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/verified_by_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginVertical="@dimen/dimen6"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/acc_verifiedLL"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center_vertical"
        android:text="Verified by : "
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/date_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verified_by_TV"
        android:layout_alignStart="@id/verified_by_TV"
        android:layout_marginBottom="@dimen/dimen6"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="date ,time"
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/po_receivedIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/date_timeTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/grass_green_circle_bg"
        android:padding="@dimen/dimen6"
        android:src="@drawable/ic_po_received"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/po_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_alignTop="@id/po_receivedIV"
        android:layout_toEndOf="@id/po_receivedIV"
        android:fontFamily="@font/outfit_medium"
        android:text="Account Verified"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/po_updated_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/po_title"
        android:layout_marginVertical="@dimen/dimen6"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/acc_verifiedLL"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center_vertical"
        android:text="Verified by : "
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/po_date_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/po_updated_by"
        android:layout_alignStart="@id/verified_by_TV"
        android:layout_marginBottom="@dimen/dimen6"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="date ,time"
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <ImageView
        android:id="@+id/agent_assignedIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/po_date_timeTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/grass_green_circle_bg"
        android:padding="@dimen/dimen6"
        android:src="@drawable/ic_border_user"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/agent_titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_alignTop="@id/agent_assignedIV"
        android:layout_toEndOf="@id/agent_assignedIV"
        android:fontFamily="@font/outfit_medium"
        android:text="Agent Assigned"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/agent_detailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/agent_titleTV"
        android:layout_marginVertical="@dimen/dimen6"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/agent_assignedIV"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center_vertical"
        android:text="details"
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/agent_date_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/agent_detailsTV"
        android:layout_alignStart="@id/verified_by_TV"
        android:layout_marginBottom="@dimen/dimen6"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="date ,time"
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <ImageView
        android:id="@+id/loading_IV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/agent_date_timeTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/grass_green_circle_bg"
        android:padding="@dimen/dimen6"
        android:src="@drawable/ic_loading"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/loading_titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_alignTop="@id/loading_IV"
        android:layout_toEndOf="@id/loading_IV"
        android:fontFamily="@font/outfit_medium"
        android:text="Loading"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/load_byTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_titleTV"
        android:layout_marginVertical="@dimen/dimen6"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/loading_IV"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center_vertical"
        android:text="Loaded By : "
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/load_dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_byTV"
        android:layout_alignStart="@id/verified_by_TV"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="load date"
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/load_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_dateTV"
        android:layout_alignStart="@id/verified_by_TV"
        android:layout_marginBottom="@dimen/dimen6"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="load time"
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <ImageView
        android:id="@+id/dispatchIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/load_timeTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/grass_green_circle_bg"
        android:padding="@dimen/dimen6"
        android:src="@drawable/ic_truck"
        android:textColor="@android:color/white"
        app:tint="@color/green" />

    <TextView
        android:id="@+id/dispatch_titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_alignTop="@id/dispatchIV"
        android:layout_toEndOf="@id/dispatchIV"
        android:fontFamily="@font/outfit_medium"
        android:text="Dispatched"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/dispatch_byTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dispatch_titleTV"
        android:layout_marginVertical="@dimen/dimen6"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/dispatchIV"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center_vertical"
        android:text="Dispatch By : "
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dispatch_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dispatch_byTV"
        android:layout_alignStart="@id/verified_by_TV"
        android:layout_marginBottom="@dimen/dimen6"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="dispatch time"
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <ImageView
        android:id="@+id/deliveredIV"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/dispatch_timeTV"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/dimen10"
        android:background="@drawable/grass_green_circle_bg"
        android:padding="@dimen/dimen6"
        android:src="@drawable/ic_order_delivered"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/delivered_titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_alignTop="@id/deliveredIV"
        android:layout_toEndOf="@id/deliveredIV"
        android:fontFamily="@font/outfit_medium"
        android:text="Delivered"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/delivered_byTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivered_titleTV"
        android:layout_marginVertical="@dimen/dimen6"
        android:layout_marginStart="@dimen/dimen16"
        android:layout_toEndOf="@id/deliveredIV"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center_vertical"
        android:text="Delivered By : "
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/delivered_dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivered_byTV"
        android:layout_alignStart="@id/verified_by_TV"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="Date : "
        android:textColor="@color/gray"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/delivered_timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delivered_dateTV"
        android:layout_alignStart="@id/verified_by_TV"
        android:layout_marginBottom="@dimen/dimen6"
        android:fontFamily="@font/outfit_medium"
        android:maxLines="1"
        android:text="Time : "
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginTop="-10dp"
        android:background="@drawable/gray_dash_border"
        android:orientation="vertical"
        android:layout_above="@id/deliveredIV"
        android:layout_marginBottom="-20dp"
        android:layout_alignEnd="@id/acc_verifiedLL"
        android:layout_alignStart="@id/acc_verifiedLL"
        android:layout_marginStart="13dp"
        android:elevation="-2dp"
        android:layout_below="@id/acc_verifiedLL" />
</RelativeLayout>