<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10"
        android:id="@+id/item_ll"
        android:layout_marginTop="@dimen/dimen10"
        android:layout_marginLeft="@dimen/dimen5"
        android:layout_marginRight="@dimen/dimen5"
        android:background="@drawable/fade_orange_bg10"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dimen10"
            android:paddingBottom="@dimen/dimen10"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/outfit_regular"
            android:text="jhgjh djshfjdshfjdsh kjdfh kgjhd jkghkjdfhgjkfdhgkjdfhgjkfdh gkjdfhgjkfd gkj"
            android:id="@+id/addressTv"
            android:paddingTop="@dimen/dimen10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen40"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_round_bg"
                android:fontFamily="@font/outfit_medium"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/remove_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_round_bg"
                android:fontFamily="@font/outfit_medium"
                android:text="Remove"
                android:layout_marginLeft="@dimen/dimen10"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/default_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_round_bg"
                android:fontFamily="@font/outfit_medium"
                android:text="Set as Default"
                android:layout_marginLeft="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen10"
                android:paddingRight="@dimen/dimen10"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>
</layout>