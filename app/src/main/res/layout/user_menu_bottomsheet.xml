<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/profile_photo_BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/top_round_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/dimen_8"
                android:src="@drawable/ic_rectangle_strip" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen20"
            android:layout_marginVertical="@dimen/dimen_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pencil"
                android:drawablePadding="@dimen/dimen_12"
                android:drawableTint="@color/gray"
                android:fontFamily="@font/outfit_regular"
                android:paddingVertical="@dimen/dimen6"
                android:text="Edit"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/user_status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_activate"
                android:drawablePadding="@dimen/dimen_12"
                android:fontFamily="@font/outfit_regular"
                android:paddingVertical="@dimen/dimen6"
                android:text="Activate"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/delete_user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/resize_delete_icon"
                android:drawablePadding="@dimen/dimen10"
                android:drawableTint="@color/gray"
                android:fontFamily="@font/outfit_regular"
                android:paddingVertical="@dimen/dimen6"
                android:text="Delete"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/change_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/resize_lock_icon"
                android:drawablePadding="@dimen/dimen10"
                android:drawableTint="@color/gray"
                android:fontFamily="@font/outfit_regular"
                android:paddingVertical="@dimen/dimen6"
                android:text="Change Password"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/resend_password_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_resend_password"
                android:drawablePadding="@dimen/dimen10"
                android:drawableTint="@color/gray"
                android:fontFamily="@font/outfit_regular"
                android:paddingVertical="@dimen/dimen6"
                android:text="Resend Password"
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>
</layout>