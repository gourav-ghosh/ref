<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.myProfile.MyProfileOptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/my_profile_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_12"
            android:layout_marginVertical="@dimen/dimen_12">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen10"
                android:layout_marginVertical="@dimen/dimen_8"
                android:layout_marginHorizontal="@dimen/dimen16"
                >

                <View
                    android:layout_width="@dimen/dimen20"
                    android:layout_height="@dimen/dimen20"
                    android:background="@drawable/ic_edit_profile"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen10"
                    android:text="My Profile"
                    android:textSize="18sp"
                    android:fontFamily="@font/outfit_medium"/>
                <View
                    android:layout_width="9dp"
                    android:layout_height="19dp"
                    android:background="@drawable/ic_right_pointed_arrow"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/change_password_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/dimen_12">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen50"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen10"
                android:layout_marginVertical="@dimen/dimen_8"
                android:layout_marginHorizontal="@dimen/dimen16"
                >

                <View
                    android:layout_width="@dimen/dimen20"
                    android:layout_height="@dimen/dimen20"
                    android:background="@drawable/ic_lock"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen10"
                    android:text="Change Password"
                    android:textSize="18sp"
                    android:fontFamily="@font/outfit_medium"/>
                <View
                    android:layout_width="9dp"
                    android:layout_height="19dp"
                    android:background="@drawable/ic_right_pointed_arrow"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>