<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.fragments.UserWorklogFragment"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_12">
            <ImageView
                android:id="@+id/backIV"
                android:layout_width="@dimen/dimen16"
                android:layout_height="@dimen/dimen16"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_gray_back_arrow" />
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worklogs"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_toRightOf="@+id/backIV"
                android:layout_centerVertical="true"
                android:fontFamily="@font/outfit_semibold"
                android:textSize="@dimen/dimen16"/>
            <RelativeLayout
                android:id="@+id/hrTopOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/user_worklog_filter_IV"
                    android:layout_width="@dimen/dimen24"
                    android:layout_height="@dimen/dimen24"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/exportIV"
                    android:background="@drawable/ic_calender_orange"/>
                <ImageView
                    android:id="@+id/exportIV"
                    android:layout_width="@dimen/dimen32"
                    android:layout_height="@dimen/dimen32"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:background="@drawable/ic_import_full" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/employeeTopOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/absentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen10"
                    android:layout_toStartOf="@id/presentTV"
                    android:background="@drawable/red_round_bg"
                    android:fontFamily="@font/outfit_medium"
                    android:paddingHorizontal="@dimen/dimen10"
                    android:paddingVertical="@dimen/dimen5"
                    android:text="Absent"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/presentTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/green_round_bg"
                    android:fontFamily="@font/outfit_medium"
                    android:paddingHorizontal="@dimen/dimen10"
                    android:paddingVertical="@dimen/dimen5"
                    android:text="Present"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40"
                android:layout_toStartOf="@id/employee_worklog_filter_IV"
                android:paddingRight="@dimen/dimen10"
                android:paddingLeft="@dimen/dimen10"
                android:layout_marginHorizontal="@dimen/dimen_12"
                android:background="@drawable/black_border_round_bg">

                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen40"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_search_orange"
                    android:id="@+id/searchET"
                    android:fontFamily="@font/outfit_regular"
                    android:hint="Search"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/employee_worklog_filter_IV"
                android:layout_width="@dimen/dimen24"
                android:layout_height="@dimen/dimen24"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/employee_export_IV"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dimen_12"
                android:background="@drawable/ic_calender_orange"/>
            <ImageView
                android:id="@+id/employee_export_IV"
                android:layout_width="@dimen/dimen32"
                android:layout_height="@dimen/dimen32"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/dimen_12"
                android:background="@drawable/ic_import_full"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/userDetailsRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen5"
            android:paddingHorizontal="@dimen/dimen10">
            <LinearLayout
                android:id="@+id/userLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/roleLL"
                android:layout_marginRight="@dimen/dimen2"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/profileImgIV"
                    android:layout_width="@dimen/dimen30"
                    android:layout_height="@dimen/dimen30"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_worklog_profile"/>
                <TextView
                    android:id="@+id/userNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dimen140"
                    android:layout_marginLeft="@dimen/dimen_8"
                    android:layout_marginRight="@dimen/dimen5"
                    android:fontFamily="@font/outfit_medium"
                    android:textSize="@dimen/dimen16"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="User Name" />
                <ImageView
                    android:id="@+id/callIV"
                    android:layout_width="@dimen/dimen20"
                    android:layout_height="@dimen/dimen20"
                    android:src="@drawable/ic_phone_call"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/green" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/roleLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/dimen15">
                <TextView
                    android:id="@+id/roleTV"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen30"
                    android:textSize="@dimen/dimen14"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:text="User Role"/>
            </LinearLayout>
        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/refresh_ll"
            android:visibility="visible">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/user_worklog_card_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimen_12"
                tools:listitem="@layout/user_worklog_card"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/noWorklogTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Worklogs Not Available"
            android:textSize="@dimen/dimen25"
            android:visibility="gone"
            android:fontFamily="@font/outfit_medium"
            android:gravity="center"/>
    </LinearLayout>

</layout>