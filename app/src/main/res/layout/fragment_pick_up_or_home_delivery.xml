<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".screens.fragments.DeliveryDetailsFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="@dimen/dimen5"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="@dimen/dimen10"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/home_delivery_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/white_round_10bg"
                    android:src="@drawable/icon_delivery_truck"
                    android:backgroundTint="@color/light_grey"/>


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery \n Order"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    >

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen5"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="@dimen/dimen5"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="@dimen/dimen10"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/pick_up_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/white_round_10bg"
                    android:src="@drawable/icon_delivery_location"
                    android:backgroundTint="@color/light_grey"/>


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pick-Up \n Order"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    >

                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>

