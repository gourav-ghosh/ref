<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_12"
        app:cardCornerRadius="@dimen/dimen_8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/black_border_round_bg"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/tile_iv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="@dimen/dimen_12"
                android:layout_marginTop="@dimen/dimen_12"
                android:layout_marginEnd="@dimen/dimen_12"
                android:layout_marginBottom="@dimen/dimen_12"
                android:background="@drawable/white_round_10bg"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen5"
                android:layout_toLeftOf="@id/availability_ll"
                android:layout_toRightOf="@id/tile_iv">
            <TextView
                android:id="@+id/tile_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:maxLines="2"
                android:textSize="16sp"
                android:fontFamily="@font/outfit_regular"
                android:ellipsize="end"
                android:layout_toRightOf="@id/tile_iv"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tile_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tile_detail"
                android:layout_marginTop="@dimen/dimen_8"
                android:fontFamily="@font/outfit_regular"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tile_num"
                android:layout_marginTop="@dimen/dimen_8"
                android:fontFamily="@font/outfit_regular"
                android:layout_toRightOf="@id/tile_iv"
                android:textColor="@color/gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_alignParentEnd="true"
                android:id="@+id/availability_ll"
                android:layout_margin="1dp">
                <TextView
                    android:id="@+id/availability_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/dimen3"
                    android:gravity="center"
                    android:background="@drawable/availability_label"
                    android:fontFamily="@font/outfit_regular"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingRight="@dimen/dimen5"
                    android:singleLine="true"
                    android:textSize="10sp"
                    android:textColor="@color/darkGreen"/>
            </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_alignParentEnd="true"
               android:layout_marginTop="@dimen/dimen_12"
               android:layout_marginEnd="@dimen/dimen20"
               android:layout_marginBottom="@dimen/dimen_4"
               android:gravity="center"
               android:id="@+id/recheck_ll"
               android:layout_below="@id/availability_ll">
               <ImageView
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:background="@drawable/blue_circle"
                   android:padding="@dimen/dimen5"
                   android:src="@drawable/ic_recheck"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Recheck"
                   android:fontFamily="@font/outfit_regular"
                   android:textColor="@color/black"
                   android:textSize="@dimen/dimen_12"/>
           </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_4"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dimen2"
                android:layout_weight="50"
                android:weightSum="50">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="10"
                    android:textAlignment="center"
                    android:textColor="@color/gray">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="UoM"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="8"
                    android:textAlignment="center"
                    android:textColor="@color/gray">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rate"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="12"
                    android:textAlignment="center"
                    android:textColor="@color/gray">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Disc."
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="8"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textColor="@color/gray">
                </TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="GST"
                    android:gravity="center"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="10"
                    android:textColor="@color/gray">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="50"
                android:layout_marginStart="@dimen/dimen2"
                android:weightSum="50">

                <TextView
                    android:id="@+id/qty_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="10"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/uom_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="8"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/rate_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="12"
                    android:paddingRight="@dimen/dimen5"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/discount_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="8"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/gst_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:layout_marginBottom="@dimen/dimen5"
                    android:layout_weight="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
        </LinearLayout>
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/dimen_8"
              android:background="@drawable/black_border_top_round_bg">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:fontFamily="@font/outfit_regular"
                  android:text="Taxable"/>
              <TextView
                  android:id="@+id/total_amount_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="@dimen/dimen_8"
                  android:fontFamily="@font/outfit_regular"
                  android:textColor="@color/black"
                  android:text=""/>
          </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>