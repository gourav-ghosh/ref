<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_round_bg"
        android:layout_gravity="bottom"

        android:id="@+id/lead_detail_page"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/faded_orangefill_round_border_bg"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_8">

                <ImageView
                    android:id="@+id/ic_cross"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cross_orange_bg"></ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_rectangle_strip"></ImageView>

                <ImageView
                    android:id="@+id/three_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/dimen_8"
                    android:src="@drawable/ic_three_dots"></ImageView>
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lead_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/orange_round_border_bg"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dimen_8"
                            android:paddingTop="@dimen/dimen_4">

                            <TextView
                                android:id="@+id/lead_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/outfit_medium"
                                android:paddingVertical="@dimen/dimen_8"
                                android:text="Lead Full Name"
                                android:textAllCaps="false"
                                android:textSize="14dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/activity_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/outfit_regular"
                                android:text="Activity type goes here 3d ago"
                                android:maxLines="2"
                                android:textSize="@dimen/dimen_12"
                                android:textAllCaps="false"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/addressTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/dimen_4"
                                    android:drawableLeft="@drawable/ic_location"
                                    android:layout_marginVertical="@dimen/dimen_4"
                                    android:fontFamily="@font/outfit_regular"
                                    android:textAllCaps="false"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/dimen_8"
                            android:paddingTop="@dimen/dimen_4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/dimen_4"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/outfit_regular"
                                    android:text="Created Date:"
                                    android:textAllCaps="false"/>

                                <TextView
                                    android:id="@+id/dateTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/outfit_regular"
                                    android:paddingHorizontal="@dimen/dimen_4"
                                    android:textSize="@dimen/dimen_12"
                                    android:text="23 Sep'23"
                                    android:textAllCaps="false"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/outfit_regular"
                                    android:text="Owner:"
                                    android:textAllCaps="false"/>

                                <TextView
                                    android:id="@+id/owner_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/outfit_regular"
                                    android:paddingHorizontal="@dimen/dimen_4"
                                    android:text="Owner Name"
                                    android:textAllCaps="false"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/source_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/dimen_4"
                                    android:fontFamily="@font/outfit_regular"
                                    android:text="Via Lead Source Name"
                                    android:textAllCaps="false"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen45"
                        android:background="@drawable/lead_list_item_bottom_strip_bg"
                        android:paddingHorizontal="@dimen/dimen_12"
                        android:paddingVertical="@dimen/dimen_8">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimen40"
                            android:layout_centerVertical="true">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/light_gray_bg10"
                                android:id="@+id/add_task_ll">
                                <TextView
                                    android:layout_width="@dimen/dimen80"
                                    android:layout_height="wrap_content"
                                    android:text="Add Task"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:fontFamily="@font/outfit_medium"
                                    android:ellipsize="end"
                                    android:paddingLeft="@dimen/dimen10"
                                    android:paddingRight="@dimen/dimen10"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/dimen80"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/dimen5"
                                android:background="@drawable/orange_round_bg10"
                                android:id="@+id/add_activity_ll">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Activity"
                                    android:textStyle="bold"
                                    android:textSize="10sp"
                                    android:maxLines="1"
                                    android:fontFamily="@font/outfit_medium"
                                    android:ellipsize="end"
                                    android:paddingLeft="@dimen/dimen10"
                                    android:paddingRight="@dimen/dimen10"
                                    android:textColor="@color/white"/>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/call"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_phone"/>

                            <ImageView
                                android:id="@+id/whatsapp"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/dimen10"
                                android:src="@drawable/ic_whatsapp"/>
                            <TextView
                                android:id="@+id/lead_stage"
                                android:layout_width="@dimen/dimen100"
                                android:layout_height="25dp"
                                android:background="@drawable/black_round_bg"
                                android:drawableRight="@drawable/ic_pencil"
                                android:drawablePadding="@dimen/dimen_8"
                                android:paddingHorizontal="@dimen/dimen_8"
                                android:paddingVertical="2dp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:fontFamily="@font/outfit_medium"
                                android:text="Lead Stage"
                                android:textAlignment="center"
                                android:textColor="@color/white"/>


                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="@dimen/dimen_8">

                <TextView
                    android:id="@+id/history_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:paddingVertical="@dimen/dimen_4"
                    android:layout_marginLeft="@dimen/dimen5"
                    android:layout_marginRight="@dimen/dimen5"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="History"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/orange_gray_selector"/>

                <TextView
                    android:id="@+id/details_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:paddingVertical="@dimen/dimen_4"
                    android:layout_marginLeft="@dimen/dimen5"
                    android:layout_marginRight="@dimen/dimen5"
                    android:clickable="true"
                    android:text="Details"
                    android:gravity="center"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/orange_gray_selector"/>

                <TextView
                    android:id="@+id/task_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="33"
                    android:layout_marginLeft="@dimen/dimen5"
                    android:layout_marginRight="@dimen/dimen5"
                    android:paddingVertical="@dimen/dimen_4"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Tasks"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/orange_gray_selector"/>
                <ImageView
                    android:id="@+id/add_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_add_detail_page"
                    android:visibility="gone">
                </ImageView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:paddingLeft="@dimen/dimen_8"
                android:paddingRight="@dimen/dimen_8"
                android:layout_marginBottom="@dimen/dimen10">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dark_grey_round_bg"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:layout_height="3dp"
                        android:id="@+id/v1"
                        android:background="@drawable/orange_round_bg50"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:layout_height="3dp"
                        android:id="@+id/v2"
                        android:background="@color/transparent"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="33"
                        android:layout_height="3dp"
                        android:id="@+id/v3"
                        android:background="@color/transparent"/>

                </LinearLayout>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/lead_details_ss"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"
                android:visibility="gone">

                <include layout="@layout/lead_details"
                    android:id="@+id/lead_details"/>
            </ScrollView>

            <include layout="@layout/task_by_lead_id_page"
                android:id="@+id/task_by_lead_id"
                android:visibility="gone"/>
            <include layout="@layout/lead_history_page"
                android:id="@+id/lead_history_ll"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>
</layout>