<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen10"
        android:background="@drawable/black_border_solid_light_red_round_bg"
        android:padding="@dimen/dimen20">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_pdf_svg" />

        <TextView
            android:id="@+id/item_titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen10"
            android:layout_marginEnd="@dimen/dimen10"
            android:layout_toStartOf="@id/icon_LL"
            android:layout_toEndOf="@id/logo"
            android:ellipsize="end"
            android:fontFamily="@font/outfit_regular"
            android:maxLines="1"
            android:text="SADFG"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen10" />

        <TextView
            android:id="@+id/item_size_dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_titleTV"
            android:layout_marginStart="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen3"
            android:layout_marginEnd="@dimen/dimen10"
            android:layout_toStartOf="@id/icon_LL"
            android:layout_toEndOf="@id/logo"
            android:fontFamily="@font/outfit_regular"
            android:text="SADFG"
            android:textColor="@color/hint_text_gray"
            android:textSize="@dimen/dimen10" />

        <LinearLayout
            android:id="@+id/icon_LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingVertical="@dimen/dimen2"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/download_item"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_download"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dimen20"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_delete" />
        </LinearLayout>
    </RelativeLayout>
</layout>