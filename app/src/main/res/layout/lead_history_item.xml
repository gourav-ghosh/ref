<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:elevation="@dimen/dimen_48"
        app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_4"
            android:background="@drawable/grey_round_bg"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:id="@+id/changeDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/darker_Blue"
                android:layout_marginVertical="@dimen/dimen_4"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/outfit_regular"
                android:layout_marginStart="@dimen/dimen_8"
                android:layout_weight="50"
                />

            <TextView
                android:id="@+id/changesBy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="@color/darker_Blue"
                android:layout_marginVertical="@dimen/dimen_4"
                android:gravity="end|center_vertical"
                android:layout_gravity="end"
                android:fontFamily="@font/outfit_regular"
                android:layout_weight="50"
                android:layout_marginHorizontal="@dimen/dimen_8"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/task_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginVertical="@dimen/dimen_8"
            android:layout_marginHorizontal="@dimen/dimen3"
            android:layout_marginBottom="@dimen/dimen10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/outfit_regular"
                android:layout_below="@id/header"
                android:layout_marginStart="@dimen/dimen_8"
                />
            <TextView
                android:id="@+id/more_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/outfit_regular"
                android:layout_below="@id/header"
                android:layout_marginHorizontal="@dimen/dimen_8"
                />
            <TextView
                android:id="@+id/comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/outfit_regular"
                android:layout_below="@id/header"
                android:layout_marginHorizontal="@dimen/dimen_8"
                />
        </LinearLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>