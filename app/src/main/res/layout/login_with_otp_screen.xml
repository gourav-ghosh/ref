<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/enter_num_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen32"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/title_img"
                    android:layout_width="159dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:src="@drawable/ic_title_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:text="Login With OTP"
                    android:fontFamily="@font/outfit_semibold"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mob_pwd_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen24"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:fontFamily="@font/outfit_regular"
                    android:text="@string/login_with_otp_title"
                    android:textAlignment="center"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/dimen_12" />

                <TextView
                    android:id="@+id/mobile_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/outfit_medium"
                    android:paddingVertical="4dp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/gray"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/mobileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/round_gray_border"
                    android:digits="1234567890"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:paddingLeft="@dimen/dimen15"
                    android:fontFamily="@font/outfit_regular"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/get_otp_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/btn_selector"
                    android:fontFamily="@font/outfit_semibold"
                    android:text="@string/get_otp"
                    android:enabled="false"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/we_will_send_you_the_one_time_password_on_your_phone_number"
                    android:textSize="@dimen/dimen10"
                    android:fontFamily="@font/outfit_medium"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/dimen_8"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/dimen_12"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="60dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/gray"
                        android:layout_gravity="center"
                        android:layout_weight="35" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" or "
                        android:textSize="@dimen/dimen24"
                        android:textColor="@color/gray"
                        android:textAlignment="center"
                        android:fontFamily="@font/outfit_regular"
                        android:layout_weight="30"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/gray"
                        android:layout_gravity="center"
                        android:layout_weight="35" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/outfit_medium"
                        android:text="@string/already_have_an_account_login"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/already_have_account_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/outfit_medium"
                        android:text="Login"
                        android:textAlignment="center"
                        android:textColor="@drawable/link_bg"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

</layout>