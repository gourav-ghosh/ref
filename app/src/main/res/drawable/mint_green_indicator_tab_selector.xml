<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Gray border background -->
            <item>
                <shape android:shape="rectangle">
                    <stroke android:color="#CCCCCC"
                        android:width="0.5dp"/>
                </shape>
            </item>

            <!-- Thick green line at the bottom -->
            <item android:gravity="bottom" android:end="@dimen/dimen20">
                <shape android:shape="rectangle">
                    <solid android:color="@color/mint_green" />
                    <size android:height="@dimen/dimen5" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Unchecked state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#CCCCCC" android:width="0.5dp"/>
        </shape>
    </item>

</selector>